{
  "name": "mcp-1c-platform-tools",
  "displayName": "MCP 1C Platform Tools",
  "description": "MCP-сервер для запуска команд 1c-platform-tools через агентов Cursor/VS Code",
  "keywords": [
    "1c",
    "1с",
    "1c platform",
    "1c enterprise",
    "1с предприятие",
    "bsl",
    "mcp",
    "cursor",
    "1c platform tools"
  ],
  "version": "0.0.0",
  "publisher": "yellow-hammer",
  "main": "./out/src/extension.js",
  "engines": {
    "vscode": "^1.101.0",
    "node": ">=20.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionDependencies": [
    "yellow-hammer.1c-platform-tools"
  ],
  "contributes": {
    "mcpServerDefinitionProviders": [
      {
        "id": "mcp-1c-platform-tools",
        "label": "MCP 1C Platform Tools"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yellow-hammer/mcp-1c-platform-tools.git"
  },
  "bugs": {
    "url": "https://github.com/yellow-hammer/mcp-1c-platform-tools/issues"
  },
  "homepage": "https://github.com/yellow-hammer/mcp-1c-platform-tools#readme",
  "license": "MIT",
  "author": {
    "name": "Ivan Karlo",
    "email": "i.karlo@outlook.com",
    "url": "https://johnnyshut.github.io/"
  },
  "contributors": [
    "Ivan Karlo (i.karlo@outlook.com)"
  ],
  "icon": "resources/1c-icon.png",
  "galleryBanner": {
    "color": "#0000FF",
    "theme": "dark"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "changelog": "git-cliff --config cliff.toml --output CHANGELOG.md",
    "vscode:prepublish": "npm run build",
    "package": "vsce package",
    "test": "npm run build && node --test out/test/formatCommandResult.test.js out/test/ipcClient.test.js out/test/toolName.test.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.3.2",
    "@types/vscode": "^1.101.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.0"
  },
  "type": "module"
