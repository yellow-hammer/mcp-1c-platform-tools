{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "vscode"],
    "outDir": "out",
    "rootDir": "."
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "out"]
}
